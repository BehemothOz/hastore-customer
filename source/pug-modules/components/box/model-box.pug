    //-   div.color-title цвета
    //-   ul.color-list
    //-     | {{ range $#{data}.GetMods | $#{data}.GetColors }}
    //-     li.color #[a(href="") {{ . }}]
    //-     | {{ end }}
    //-   |{{ else }}
    //-   div asdasdasdasd
    //-   |{{ end }}
    div.hidden-box
      | {{ $colors := $#{data}.GetMods | $#{data}.GetColors }}
      | {{ if (len $colors | ne 0) }}
      div.color-title цвета
          ul.color-list
            li.color #[a(href="") {{ len $colors }}]
            | {{ range $colors }}
            li.color #[a(href="") {{ . }}]
            | {{ end }}
      | {{ end }}

      a(href!=`{{ printf "%v" $` + data + `.ID | route "product" "id" }}` role="button").btn.btn-block.btn-green.btn-round.btn-box Перейти к товару
